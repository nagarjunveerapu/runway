# Finance App - Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# VAULT ENCRYPTION (CRITICAL!)
# ============================================
# Generate a key on first run or use: python -c "import base64, os; print(base64.b64encode(os.urandom(32)).decode())"
VAULT_KEY=REPLACE_WITH_BASE64_ENCODED_32BYTE_KEY
VAULT_KEY_FILE=.vault_key

# ============================================
# DATABASE
# ============================================
# SQLite (default for development)
DATABASE_URL=sqlite:///data/finance.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/financedb

# ============================================
# API KEYS (Optional - for cloud features)
# ============================================
# AWS (for S3 storage, Secrets Manager, etc.)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# OpenAI (for advanced ML categorization)
# OPENAI_API_KEY=sk-...

# ============================================
# ACCOUNT AGGREGATOR (when using real AA)
# ============================================
# AA_CLIENT_ID=your_fiu_client_id
# AA_CLIENT_SECRET=your_fiu_client_secret
# AA_REDIRECT_URI=https://yourapp.com/aa/callback

# ============================================
# APPLICATION SETTINGS
# ============================================
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGGING=true
ML_MODEL_PATH=ml/models/categorizer.pkl

# Frontend URL for CORS (production only)
# FRONTEND_URL=https://your-frontend.com

# ============================================
# FEATURE FLAGS
# ============================================
# Enable OCR for scanned PDFs (requires Tesseract)
ENABLE_PDF_OCR=false

# Enable Camelot for advanced table extraction (requires Ghostscript)
ENABLE_CAMELOT=false

# Enable Tabula for PDF tables (requires Java)
ENABLE_TABULA=false

# ============================================
# DEDUPLICATION SETTINGS
# ============================================
# Date tolerance window (Â±N days)
DEDUP_TIME_WINDOW_DAYS=1

# Merchant similarity threshold (0-100)
DEDUP_FUZZY_THRESHOLD=85

# Merge duplicates vs flag only
DEDUP_MERGE_DUPLICATES=true
