# Runway Finance Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# For development (SQLite)
# DATABASE_URL=sqlite:///data/finance.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://runway_user:runway_password@localhost:5432/runway_finance

# For cloud PostgreSQL (e.g., Supabase, Neon, Railway)
# DATABASE_URL=postgresql://user:password@host.region.provider.com:5432/database

# ==============================================
# SECURITY
# ==============================================

# Vault encryption key (generate a secure random key)
VAULT_KEY=your_secret_encryption_key_here

# Optional: Path to vault key file
VAULT_KEY_FILE=.vault_key

# ==============================================
# API & INTEGRATIONS
# ==============================================

# OpenAI (optional, for AI features)
OPENAI_API_KEY=

# AWS (optional, for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Account Aggregator (optional)
AA_CLIENT_ID=
AA_CLIENT_SECRET=
AA_REDIRECT_URI=

# ==============================================
# APPLICATION SETTINGS
# ==============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable audit logging
ENABLE_AUDIT_LOGGING=true

# ML model path
ML_MODEL_PATH=ml/models/categorizer.pkl

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ==============================================
# FEATURE FLAGS
# ==============================================

# PDF OCR (requires Tesseract)
ENABLE_PDF_OCR=false

# Advanced PDF parsing (requires Java/Ghostscript)
ENABLE_CAMELOT=false
ENABLE_TABULA=false

# ==============================================
# DEDUPLICATION SETTINGS
# ==============================================

# Time window for duplicate detection (days)
DEDUP_TIME_WINDOW_DAYS=1

# Fuzzy matching threshold (0-100)
DEDUP_FUZZY_THRESHOLD=85

# Auto-merge duplicates
DEDUP_MERGE_DUPLICATES=true

